{% extends "base.html.twig" %}

{% block title "Voir toutes les runes" %}

{% block body %}

    <div class="container container-fluid mt-4 m-0">
        <h1>Gestion des runes</h1>

        <table class="table table-striped table-hover table-dark">
            <thead>
                <th>Set</th>
                <th>Rareté</th>
                <th>Stat Principale</th>
                <th>Valeur</th>
                <th>Innate Stat</th>
                <th>Valeur</th>
                <th>Grade</th>
                <th>Slot</th>
                <th>Niveau</th>
                <th>ATK %</th><th>ATK</th>
                <th>DEF %</th><th>DEF</th>
                <th>PV %</th><th>PV</th>
                <th>VIT</th><th>Précision</th><th>Résistance</th>
                <th>Tx Crit</th><th>Dgts Crit</th>
            </tr>
            </thead>
            <tbody>
                {% for rune in runes %}
                <tr>
                    <td>{{rune.runeSet}}</td><td>{{rune.rarity}}</td>
                        <td>{{rune.mainStat}}</td><td>{{rune.mainStatValue}}</td>
                        <td>{{rune.innateStat}}</td><td>{{rune.innateStatValue}}</td>
                        <td>{{rune.Grade}}</td><td>{{rune.slot}}</td><td>{{rune.level}}</td>
                        <td>{{rune.atkPer}}</td><td>{{rune.atkFlat}}</td>
                        <td>{{rune.defPer}}</td><td>{{rune.DefFlat}}</td>
                        <td>{{rune.hpPer}}</td><td>{{rune.hpFlat}}</td>
                        <td>{{rune.spd}}</td><td>{{rune.acc}}</td><td>{{rune.res}}</td>
                        <td>{{rune.critRate}}</td><td>{{rune.critDmg}}</td>
                </tr> 
                {% endfor %}
            </tbody>
        </table>
    </div>





{% endblock %}